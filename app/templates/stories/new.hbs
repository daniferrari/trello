<h1>Create new Story</h1>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" value=model.title class="form-control" placeholder="Please enter the title of the stories" autofocus="autofocus"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Due Date</label>
    <div class="col-sm-10">
      {{input type="date" value=model.dueDate class="form-control" placeholder="Please enter the due date of the stories"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveStory' model}} disabled={{unless model.isValid 'disabled'}}>Add to stories list</button>
    </div>
  </div>
</div>
