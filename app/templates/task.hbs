<h1>List of all Tasks</h1>

{{#link-to 'tasks.new' class="btn btn-primary"}}Add new Task{{/link-to}}
<br><br>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Story ID</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |task|}}
    <tr>
      <th>{{#link-to 'stories.view' story.id }}{{task.name}}{{/link-to}}</th>
      <td>{{task.storyId}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>

{{outlet}}
