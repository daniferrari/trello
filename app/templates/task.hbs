<h1>List of all Tasks</h1>

{{#link-to 'tasks.new' class="btn btn-primary"}}Add new Task{{/link-to}}
<br><br>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Story ID</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |task|}}
    <tr>
      <th>{{#link-to 'tasks.view' task.id }}{{task.name}}{{/link-to}}</th>
      <td>{{task.storyId}}</td>
      <td>
        <button class="btn btn-danger btn-xs" {{action 'deleteTask' task}}>Delete</button>
        {{#link-to 'tasks.edit' task.id }}<button class="btn btn-primary btn-xs">Edit</button>{{/link-to}}
        {{#link-to 'tasks.view' task.id }}<button class="btn btn-info btn-xs">Details</button>{{/link-to}}
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>

{{outlet}}
