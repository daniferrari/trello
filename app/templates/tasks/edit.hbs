<h1>Edit task </h1>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="text" value=model.task.name class="form-control" placeholder="Please enter the name of the Task" autofocus="autofocus"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveTask' model.task}}>Add to task list</button>
    </div>
  </div>
</div>
