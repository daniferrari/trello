<h1>Create new Task</h1>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="text" value=model.task.name class="form-control" placeholder="Please enter the name of the Task" autofocus="autofocus"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Story ID</label>
    <div class="col-sm-10">
      <select onchange={{action "listStories" value="target.value"}}>
      {{#each model.story as |story|}}
        <option value={{story.id}}>{{story.title}}</option>
      {{/each}}
    </select>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveTask' model.task}} disabled={{unless model.isValid 'disabled'}} >Add to task list</button>
    </div>
  </div>
</div>
