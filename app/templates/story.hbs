<h1>List of all Stories</h1>

{{#link-to 'stories.new' class="btn btn-primary"}}Add new Story{{/link-to}}
<br><br>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Due Date</th>
      <th>Tasks</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |story|}}
    <tr>
      <th>{{#link-to 'stories.view' story.id }}{{story.title}}{{/link-to}}</th>
      <td>{{story.dueDate}}</td>
      <td></td>
      <td>
        <button class="btn btn-danger btn-xs" {{action 'deleteStories' story}}>Delete</button>
        {{#link-to 'stories.edit' story.id }}<button class="btn btn-primary btn-xs">Edit</button>{{/link-to}}
        {{#link-to 'stories.view' story.id }}<button class="btn btn-primary btn-xs">View</button>{{/link-to}}
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>

{{outlet}}
